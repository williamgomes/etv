<ul class="thumb-post infinite-item">
{% if elements is not empty %}
{% for post in elements %}
                          <li class="item">
                            <div class="post-content">
                                <div class="content_img">
                                    {% if date(post.postCreatedOn) > date('-7days') %}<div class="new">New</div>{% endif %}
                                    <a class="post-image" title="" href="{{ app.request.getBaseURL() }}/post/view/{{post.postId}}">
                                    <img src="{{ app.request.getBaseURL() }}{{asset(post.postCoverImage)}}" title="" alt=""/>
                                    </a>
                                </div>
                                <div class="post_dec">
                                    <h2 class="product-name"><a title="Aliquam lorem ante olsa" href="#">{{post.postTitle}}</a></h2>
                                    <p class="date">{{ post.postCreatedOn is empty ? "" : post.postCreatedOn|date("M d, Y") }}</p>
                                    <p>{{post.postAbout[:110]}}</p>
                                </div>
                            </div>
                          </li>
                      {% endfor %}
                      <div style="display:none"><a class="infinite-more-link" href="{{ app.request.getBaseURL() }}/post/moreposts/{{firstResult}}/{{filter}}"></a></div> 
                    {% else %}
                     <div class="col-md-2 col-md-offset-5">No More Posts..</div>
                    {% endif %}
</ul>